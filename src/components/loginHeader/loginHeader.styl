.m-hd {
  position: fixed !important;
  left: 0;
  top: 0;
  z-index: 5;
  width: 100%;
  .m-topBar, .m-topBar .bd {
    position: relative;
  }
  .m-topBar .bd {
    height: 1.16rem;
    background-color: #fafafa;
    &::after {
      content: '';
      left: 0;
      position: absolute;
      background-color: #d9d9d9;
      width: 100%;
      height: 1px;
      transform-origin: 50% 100% 0;
      bottom: 0;
      transform: scale3d(1, .5, 1);
    }
    .row {
      z-index: 1;
      width: 10rem;
      margin: auto;
      overflow: hidden;
      position: relative;
      padding: 0 .21333rem 0 .32rem;
      height: 1.17333rem;
      display: flex;
      -webkit-box-align: center;
      align-items: center;
      -webkit-box-pack: justify;
      justify-content: space-between;
      .u-icon-home {
        width: .64rem;
        height: .58667rem;
        background-position: 0 -.98667rem;
        display: inline-block;
        vertical-align: middle;
        background-image: url('./images/login.png');
        background-repeat: no-repeat;
        background-size: 2.29333rem 5.6rem;
      }
      .u-icon-logo {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        width: 2.29333rem;
        height: .72rem;
        background-position: 0 -1.70667rem;
        display: inline-block;
        vertical-align: middle;
        background-image: url('./images/login.png');
        background-repeat: no-repeat;
        background-size: 2.29333rem 5.6rem;
      }
      .right {
        margin-left: auto;
        margin-right: .06667rem;
        .m-search {
          margin-right: .095rem;
          .u-sear {
            position: relative;
            bottom: 0;
            width: .85333rem;
            height: .85333rem;
            background-position: 0 -4.74667rem;
            display: inline-block;
            vertical-align: middle;
            background-image: url('./images/login.png');
            background-repeat: no-repeat;
            background-size: 2.29333rem 5.6rem;
          }
        }
        .m-cart {
          .u-cart {
            position: relative;
            width: .85333rem;
            height: .85333rem;
            background-position: 0 0;
            display: inline-block;
            vertical-align: middle;
            background-image: url('./images/login.png');
            background-repeat: no-repeat;
            background-size: 2.29333rem 5.6rem;
          }
        }
      }
    }
  }
}
