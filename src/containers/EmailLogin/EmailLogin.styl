.ursBox {
  margin-top: .53333rem;
  .g-bd {
    width: 100%;
    height: 100%;
    background: none;
    overflow: hidden;
    border-radius: 4px;
    position: relative;
    .m-cnt {
      padding: 0 0.555556rem;
      height: 100%;
      overflow: hidden;
      .m-container {
        position: relative;
        margin: 0 auto;
        padding-top: 1.6rem;
        .u-tab {
          position: absolute;
          bottom: 2.22rem;
          right: 0;
          padding: 0;
          width: 300px;
          margin: 0 auto;
          .tab0 {
            background: none;
            color: #333;
            font-size: 0.4rem;
            height: 0.15rem;
            padding: 0;
            line-height: 0.6rem;
            float: right;
          }
        }
        .f-cb {
          zoom: 1;
          &::after {
            display: block;
            clear: both;
            visibility: hidden;
            height: 0;
            overflow: hidden;
            content: ".";
          }
        }
        .inputBox {
          height: 1.28rem;
          line-height: 1.28rem;
          border: none;
          padding-bottom: 1px;
          z-index: 19;
          position: relative;
          margin-bottom: 0px;
          background: #fff;
          font-size: 12px;
          .u-input {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
            line-height: 1.28rem;
            font-size: 12px;
            .u-label {
              width: 267px;
              font-size: 0.375rem;
              font-weight: normal;
              position: absolute;
              z-index: 100;
              top: 0;
              left: 10px;
              color: #bdbdbd;
              cursor: text;
              display: none !important;
            }
            input {
              width: 8.27rem;
              height: 0.6rem;
              font-size: 0.4rem;
              line-height: 0.6rem;
              margin: 0.39rem 0;
              padding-left: 0;
              -webkit-tap-highlight-color: transparent;
              letter-spacing: normal;
              font-weight: normal;
              background: #fff;
              color: #333;
              border: 0;
            }
          }
          .u-tip {
            position: absolute;
            top: 0;
            right: 0;
            width: 32px;
            height: 100%;
            margin: 0;
            padding: 0;
            float: right;
            .u-success {
              width: 0.88rem;
              height: 0.88rem;
              position: absolute;
              top: 50%;
              left: 50%;
              -webkit-transform: translate3d(-50%, -50%, 0);
              margin: 0;
              -webkit-tap-highlight-color: transparent;
            }
            .u-clear {
              background: url('./images/1.png') no-repeat 50% 50%;
              background-size: 0.37rem 0.37rem;
            }
          }
          &::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 1px;
            background: #d9d9d9;
          }
        }
        .m-pccnt {
          position: relative;
          margin-top: 0;
          .m-pcbox {
            font-size: 0;
            margin-top: 16px;
            position: relative;
            .m-pc {
              width: 100%;
              display: inline-block;
              vertical-align: top;
              .u-input {
                width: 100%;
                position: relative;
                float: left;
                height: 100%;
                input {
                  height: 0.6rem;
                  font-size: 0.4rem;
                  line-height: 0.6rem;
                  margin: 0.39rem 0;
                  padding-left: 0;
                  -webkit-tap-highlight-color: transparent;
                  letter-spacing: normal;
                  color: #333;
                  border: 0;
                }
              }
              .pcin {
                width: 5.33rem;
              }
            }
            .inputBox {
              height: 1.28rem;
              line-height: 1.28rem;
              border: none;
              padding-bottom: 1px;
              background: #fff;
              font-size: 12px;
              margin-bottom: 0px;
              z-index: 19;
              position: relative;
              .u-label {
                width: 130px;
                font-size: 0.375rem;
                font-weight: normal;
                position: absolute;
                z-index: 100;
                color: #bdbdbd;
                display: none !important;
              }
            }
            .f-fl {
              float: left;
            }
            .pcbtn {
              position: absolute;
              right: 0.22rem;
              top: 0.3rem;
              z-index: 100;
              display: inline-block;
              margin-left: 10px;
              vertical-align: top;
              a {
                display: block;
                width: 2.3rem;
                height: 0.75rem;
                text-align: center;
                color: #333;
                font-size: 14px;
                background: #fff;
                line-height: 0.75rem;
                border: 1px solid #7F7F7F;
                border-radius: 4px;
              }
            }
            .f-fl {
              float: left;
            }
          }
        }
        .loginbox {
          margin: 0;
          position: absolute;
          left: 0;
          bottom: 0.426rem;
          width: 100%;
          top: 440px
          .u-loginbtn {
            height: 1.28rem;
            font-size: 0.4rem;
            line-height: 1.28rem;
            border-radius: 3px;
            position: relative;
            background: #b4282d;
            text-indent: 0;
            display: block;
            width: 100%;
            cursor: pointer;
            text-align: center;
            color: #fff;
          }
        }
        .m-unlogin {
          height: 0.582rem;
          line-height: 0.582rem;
          padding: 0.533rem 0 2.24rem;
          font-size: 0;
          .forgetpwdReg {
            float: left !important;
            height: 0.6rem;
            text-decoration: none;
            cursor: pointer;
            color: #7f7f7f !important;
            font-size: 0.4rem;
            line-height: 0.6rem;
            margin-top: -5px;
          }
        }
        .f-cb::after {
          display: block;
          clear: both;
          visibility: hidden;
          height: 0;
          overflow: hidden;
          content: ".";
        }
        .f-cb::after, .f-cbli li::after {
          display: block;
          clear: both;
          visibility: hidden;
          height: 0;
          overflow: hidden;
          content: ".";
        }
      }
    }
    .m-cnt .u-input, .m-cnt .u-tip {
      height: 100%;
    }
  }
  #cnt-box {
    margin: auto;
  }
}

.foot {
  padding: 0 .53333rem;
  .other {
    border-radius: 2px;
    display: block;
    width: 100%;
    height: 1.25333rem;
    line-height: 1.25333rem;
    color: #b4282d;
    background-color: transparent;
    vertical-align: middle;
    text-align: center;
    font-size: .37333rem;
    border: 1px solid #b4282d;
    overflow: hidden;
  }
}
