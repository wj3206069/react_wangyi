.shop-row {
  width: 10rem;
  margin-right: auto;
  margin-left: auto;
  .shop-main {
    padding-bottom: 2.64rem;
    .m-page {
      position: fixed;
      top: 1.17333rem;
      left: 0;
      bottom: 0;
      z-index: 0;
      width: 100%;
      background-color: #f4f4f4;
      text-align: center;
      .container {
        position: absolute;
        top: -.66667rem;
        right: 0;
        bottom: 0;
        left: 0;
        height: 4rem;
        margin: auto;
        .txt {
          font-size: .37333rem;
          line-height: 1;
          color: #7f7f7f;
          .noCart-login {
            margin-top: -.26667rem;
            .noCart-title {
              margin-bottom: .66667rem;
              line-height: 1;
              font-size: .37333rem;
              color: #999;
            }
            .noCart-btn {
              margin: auto;
              width: 6.4rem;
              height: 1.22667rem;
              font-size: .4rem;
              line-height: 1.22667rem;
              color: #fff;
              background-color: #b4282d;
              border-radius: .04rem;
            }
          }
        }
      }
      .img {
        display: inline-block;
        vertical-align: middle;
        width: 3.30667rem;
        height: 3.30667rem;
        margin-bottom: .10667rem;
        background-size: 3.30667rem 3.30667rem;
        background-position: center center;
        background-repeat: no-repeat;
      }
    }
    .m-page-noCart {
      .img {
        background-image: url('./images/gwc.png');
      }
    }
    .wraper {
      .m-hd {
        position: fixed !important;
        left: 0;
        top: 0;
        z-index: 5;
        width: 100%;
        .m-cartHd {
          height: 1.17333rem;
          padding: 0 .4rem;
          line-height: 1.17333rem;
          text-align: center;
          background-color: #fff;
          position: relative;
          .logs {
            display: inline-block;
            font-size: .48rem;
          }
          .rights {
            position: absolute;
            top: 0;
            width: 90px;
            right: .4rem;
            font-size: .4rem;
            .cart-coupon {
              color: #B4282D;
              margin-left: -8.938px;
            }
            .cart-btn {
              margin-left: .4rem;
            }
          }
          &::after {
            content: '';
            position: absolute;
            background-color: #d9d9d9;
            left: 0;
            width: 100%;
            height: 1px;
            -webkit-transform-origin: 50% 100% 0;
            transform-origin: 50% 100% 0;
            bottom: 0;
          }
        }
      }
    }
    .lists {
      position: relative;
      z-index: 1;
      height: .93333rem;
      padding: 0 .4rem;
      background: #f4f4f4;
      display: flex;
      flex-flow: row nowrap;
      -webkit-box-align: center;
      align-items: center;
      -webkit-box-pack: justify;
      justify-content: space-between;
      .item {
        display: flex;
        -webkit-box-align: center;
        align-items: center;
        font-size: .32rem;
        color: #666;
        .u-icon {
          margin-right: .08rem;
          position: relative;
          top: -1px;
          background-size: 98%;
          display: inline-block;
          vertical-align: middle;
          background: url("./images/dian.png") no-repeat;
          width: .13333rem;
          height: .13333rem;
        }
      }
    }
  }
}
