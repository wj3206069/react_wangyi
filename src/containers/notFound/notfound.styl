.m-hdWrap {
  height: 1.22222rem;
  border-bottom: 1px solid transparent;
  .m-hd {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    .m-topBar {
      width: 100%;
      height: 1.22222rem;
      background-color: #fff;
      border-bottom: 1px solid rgba(0, 0, 0, 0.15);
      z-index: 99;
      .g-row {
        width: 10rem;
        margin-right: auto;
        margin-left: auto;
        overflow: hidden;
        padding-left: .22222rem;
        padding-right: .22222rem;
        .logo {
          float: left;
          width: 2.16667rem;
          margin-top: .16667rem;
        }
        .right {
          line-height: 1;
          font-size: .38889rem;
          float: right;
          margin-top: .26389rem;
          .login {
            display: inline;
            border-width: 2px;
            padding-right: .22222rem;
            border-right: 1px solid #000;
            margin-top: .15278rem;
            color: #333;
            float: left;
          }
          .reg {
            padding-left: .22222rem;
            margin-right: .27778rem;
            display: inline;
            margin-top: .15278rem;
            color: #333;
            float: left;
          }
          .cart {
            float: left;
            position: relative;
            padding-left: .09722rem;
            padding-right: .09722rem;
            .i-cart {
              display: block;
              width: .69444rem;
              height: .69444rem;
              background-size: .69444rem .69444rem;
              background: url("./images/cart.png") no-repeat;
            }
          }
        }
      }
    }
  }
}

.m_main {
  width: 10rem;
  margin-right: auto;
  margin-left: auto;
  .m-top {
    position: relative;
    width: 100%;
    height: 6.92188rem;
    overflow: hidden;
    .u-banner {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      animation: scale_bg 4s .5s linear both 1;
    }
    .u-con {
      position: relative;
      padding-top: 0.71875rem;
      .tlt {
        display: block;
        margin: 0 auto;
        width: 6.84375rem;
        height: 3.51563rem;
      }
      .tip {
        margin: 0.07813rem auto 0;
        color: #333;
        font-size: 0.34375rem;
        line-height: 0.46875rem;
        text-align: center;
      }
      .btn-home {
        display: block;
        margin: 0.15625rem auto 0;
        width: 3.125rem;
        height: 0.84375rem;
        line-height: 0.84375rem;
        font-size: 0.3125rem;
        color: #fff;
        text-align: center;
        background: #ab2b2b;
        border-radius: 0.07813rem;
      }
    }
  }
  .m-port {
    margin: 0.35938rem 0 0;
    position: relative;
    overflow: hidden;
    width: 10rem;
    height: 3.53125rem;
    .u-act {
      display: block;
      width: 10rem;
      height: 3.53125rem;
      .imgs {
        width: 100%;
        height: 100%;
      }
    }
  }
}
