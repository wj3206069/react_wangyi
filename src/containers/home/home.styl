.home {
  width: 10rem
  height 3120px
  margin-right: auto;
  margin-left: auto;
  .header {
    height: 148px
    .m-hd {
      z-index 11
      position fixed !important
      left: 0
      top: 0
      width: 100%
      background-color: #fff
      border-bottom 1px solid #d9d9d9
      .head-top {
        position: relative
        z-index 2
        display flex
        flex-flow row nowrap
        align-items center
        background: #fff
        padding .21333rem .4rem
        .logoss {
          width: 1.84rem;
          height: .53333rem;
          background-image: url('./images/logo.png');
          display: inline-block;
          margin-right: .26667rem;
          background-size: cover;
          background-position: center;
        }
        .search {
          flex-grow 1
          justify-content: center;
          height: .74667rem;
          font-size: .37333rem;
          background-color: #ededed;
          border-radius: .10667rem;
          display flex
          align-items center
          flex-flow row nowrap
          .search-i {
            display: inline-block;
            vertical-align: middle;
            background-image: url('./images/search.png');
            background-repeat: no-repeat;
            background-size: 100% 100%;
            width: .37333rem;
            height: .37333rem;
            margin-right: .13333rem;
          }
          .search-s {
            color #666
            font-size .37333rem
          }
        }
        .login {
          width: .98667rem;
          height: .53333rem;
          line-height: .53333rem;
          text-align: center;
          color: #b4282d;
          border: 1px solid #b4282d;
          border-radius: .10667rem;
          margin-left: .21333rem;
        }
      }
      .head-bot {
        position: relative
        z-index 2
        background: #fff
        margin-top -.01333rem
        .bot-list {
          padding-right 1.33333rem
          .list-head {
            display flex
            flex-flow row nowrap
            background-color: #fff
            position: relative
            .inner {
              position: relative;
              height: 100%;
              width: 100%;
              overflow: hidden;
              display flex
              flex-flow row nowrap
              .inner-list {
                display flex
                flex-flow row nowrap
                flex-shrink 0
                padding 0 .4rem
                background: #fff
                .active {
                  color: #b4282d
                  margin-left: 0 !important
                  flex-shrink: 0;
                  position: relative;
                  .txt {
                    position: relative;
                    color: #b4282d !important
                    &::after {
                      content: ' ';
                      position: absolute;
                      left: 0;
                      bottom: 0;
                      width: 100%;
                      height: .05333rem;
                      background-color: #b4282d;
                    }
                  }
                }
                .tab {
                  margin-left: .26667rem
                  flex-shrink: 0;
                  position: relative;
                  display: flex;
                  flex-flow: row nowrap;
                  align-items: center;
                  justify-content: center;
                  z-index: 1;
                  text-align: center;
                  .txt {
                    display: inline-block;
                    padding: 0 .21333rem;
                    line-height: .8rem;
                    font-size: .37333rem;
                    color: #333;
                    text-align: center
                  }
                }
              }
            }
          }
        }
        .bot-all {
          display flex
          flex-grow 0
          align-items center
          justify-content center
          position: absolute
          top: 0
          right: 0
          .liner {
            width: .8rem;
            height: .8rem;
            background-image: linear-gradient(to right, rgba(255, 255, 255, 0) 0, #fff 100%)
            z-index 2
          }
          .toggle {
            width: 1.33333rem;
            height: .8rem;
            text-align: center;
            background: #fff;
            .icon {
              margin-top: .2rem;
              display: inline-block;
              vertical-align: middle;
              background-image: url('./images/san.png');
              background-repeat: no-repeat;
              background-size: 100% 100%;
              width: .4rem;
              height: .4rem;
              transition transform .5s
            }
          }
        }
      }
    }
  }
  .severIndex {
    background: #FFEDDB
    .grow {
      width: 100%;
      height: .96rem;
      padding: 0 .4rem;
      display: flex;
      flex-flow: row nowrap;
      align-items: center;
      zoom: 1;
      box-sizing border-box
      &::after {
        display: block;
        clear: both;
        visibility: hidden;
        height: 0;
        overflow: hidden;
        content: ".";
      }
      .item {
        flex: 1;
        float: left;
        -webkit-box-flex: 1;
        a {
          display: inline-block;
          vertical-align: middle;
          height: .42667rem;
          .u-icon {
            display: inline-block;
            vertical-align: middle;
            background-repeat: no-repeat;
            background-size: 100% 100%;
            width: .42667rem;
            height: .42667rem;
          }
          .txt {
            font-size: .32rem;
            color: #B4282D;
            margin-left: .10667rem;
            line-height: .42667rem;
            display: inline-block;
            vertical-align: middle;
          }
        }
      }
    }
  }
  .shop-list {
    width: 100%
    height: 5.22667rem
    background-image: url('./images/bj.png');
    background-size: 100% 100%;
    .lists .container {
      margin-left: auto;
      margin-right: auto;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }
    .lists .slide, .lists .wrapper {
      height auto
    }
    .lists .wrapper {
      position: relative;
      width: 100%;
      z-index: 1;
      display: flex;
      box-sizing: content-box;
    }
    .lists .slide {
      flex-shrink: 0;
      width: 100%;
      position: relative;
    }
    .lists {
      position: relative;
      .container {
        padding-bottom: .69333rem
        .wrapper {
          .slide {
            .list-item {
              display: block;
              width: 1.46667rem;
              height: 2.08rem;
              float: left;
              margin: .13333rem .26667rem 0;
              margin-bottom: .12rem;
              .icon {
                width: 1.46667rem;
                height: 1.46667rem;
                img {
                  width: 1.46667rem;
                  height: 1.46667rem;
                  display block
                }
              }
              .txt {
                margin-top: .13333rem;
                text-align: center;
                font-size: .32rem;
                line-height: .48rem;
                white-space: nowrap;
                color #333
              }
            }
          }
        }
        .pagination {
          width: auto;
          left: 0;
          bottom: .42667rem;
          height: .05333rem;
          margin-bottom: 0;
          margin-right: 0;
          padding-right: 0;
          z-index: 10;
          right: 0
        }
      }
    }
  }
  .shop-rush {
    .one {
      width: 10rem;
      height: 4.408888888888889rem;
      background: url('./images/bj1.png');
      background-size: 100% 100%;
      .one-i {
        width: 100%
        height: 100%
        img {
          display inline
          width: 100%
          height auto
        }
      }
    }
    .two {
      width: 10rem;
      height: 2.7111111111111112rem;
      background: url('./images/bj2.png');
      background-size: 100% 100%;
      .promItem {
        width: 50%;
        height: 100%;
        float: left;
        display: block;
        box-sizing: border-box;
        .my-img {
          width: 100%
          height: 100%
          img {
            display inline
            width: 100%
            height auto
          }
        }
      }
    }
    .three {
      width: 10rem;
      height: 2.7111111111111112rem;
      background: url('./images/bj3.png');
      background-size: 100% 100%;
      box-sizing: border-box;
      position: relative
      .promItem1 {
        width: 50%;
        height: 100%;
        float: left;
        display: block;
        position: absolute
        div {
          width: 100%
          height: 100%
          img {
            display: inline;
            width: 100%;
            height: auto;
          }
        }
      }
      .promItem2 {
        width: 50%;
        height: 100%;
        float: right;
        display: block;
        position: absolute
        margin-left: 375.2px;
        div {
          width: 100%
          height: 100%
          img {
            display: inline;
            width: 100%;
            height: auto;
          }
        }
      }
    }
    .liner-bot {
      width: 100%;
      height: 0.2rem;
      background: url('./images/liner1.png');
      background-size: 100% 100%;
    }
  }
  .shop-ceo {
    a {
      background-color: #B7030A
      margin: -1px 0;
      display: block;
      width: 100%;
      height: 2.13333rem;
      img {
        width: 100%
        height: 100%
      }
    }
  }
  .shop-four {
    background: #B7030A
    overflow: hidden;
    padding: .13333rem .4rem .4rem .34667rem;
    margin-bottom: .26667rem;
    a {
      display: block;
      width: 4.57333rem;
      height: 3.52rem;
      float: left;
      margin: .05333rem 0 0 .05333rem;
      padding: .26667rem 0 0 .26667rem;
      border-radius: .05333rem;
      background-color: #f5f5f5
      background-image: url('./images/bj4.png');
      background-size: 100% 100%;
      box-sizing: border-box
      .title {
        padding-left: .13333rem;
        font-size: .42667rem;
        font-family: PingFangSC-Medium;
        color #333333
        line-height: 1.5;
      }
      .desc {
        padding-left: .13333rem;
        font-size: .32rem;
        color: #7f7f7f;
        line-height: 1.5
      }
      .picList {
        width: 100%
        .pic {
          width: 2rem;
          height: 2rem;
          float: left;
          margin-right: .05333rem;
        }
      }
    }
  }
}
